<h1 class ="h1">Konti</h1>

<div class="list-group">
    <a href="costumersAdd" class="list-group-item list-group-item-action list-group-item-dark">Tilføj konto</a>
    <a href="costumersEdit" class="list-group-item list-group-item-action list-group-item-dark">Justér konto (husk
        ID)</a>

</div>
<table class="table">
    <thead class="thead-dark">

        <tr>
            <th>Unikt ID</th>
            <th>ID</th>
            <th>Ejer</th>
            <th>Kontonavn</th>
            <th>Kontonummer</th>
            <th>Saldo</th>
            <th>Rente</th>
            <th>Fjern</th>
            <th>JSON</th>

        </tr>
    </thead>
    {{#each costumers}}
    <tr>
        <td>{{_id}}</td>
        <td>{{uid}}</td>
        <td>{{owner}}</td>
        <td>{{account_name}}</td>
        <td>{{account_accountNumber}}</td>
        <td>{{account_balance}} kr</td>
        <td>{{account_rate}}</td>
           <td>
            <form action="/costumers/json/{{uid}}" method="GET">
                <button class="btn btn-dark">JSON</button>
            </form>
        </td>
        <td>
            <form action="/costumers/delete/{{_id}}" method="POST">
                <button class="btn btn-dark">DELETE</button>
            </form>
        </td>
      
    </tr>
    {{/each}}
 
</table>